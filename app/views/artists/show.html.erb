<section id="artist">
		<div class="container">
			<div class="row">
				<div class="col-md-8" id="list-album">
					<!-- Aqui va los albunes del artista -->
					<h1><%= @artist.name %></h1>
					<hr>
					<div>
						<span class="h4">Albums </span><sup class="badge badge-primary"><%= @artist.albums.count %></sup>
					</div>
					<div class="row">
						<% @artist.albums.each do |album| %>
							<div class="col-md-3 col-sm-6" id="space-box">
								<div class="card border border-dark" id="card" >
									<img class="card-img-top" src="<%= album.image_url %>" alt="Card image cap">
									<div class="card-body text-center" style="background-color: #efefef">
										<h5 class="card-title"><%= album.name %></h5>
										<a href="#" class="btn btn-primary btn-block">Ver m√°s</a>
									</div>
								</div>
							</div>
						<% end %>
					</div>
				</div>
				<div class="col-md-3">
					<!-- Aqui va la foto del artista -->
					<img src="<%= @artist.image_url %>" class="img-thumbnail" alt="imagen del grupo The killers">
				</div>
			</div>
		</div>
</section>
